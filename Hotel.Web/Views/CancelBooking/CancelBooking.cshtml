@model IEnumerable<Hotel.Web.Models.UserBooking>

@if (Model != null && Model.Any())
{
    foreach (var user in Model)
    {
        <div>
            <span>@user.RoomType-@user.CheckIn</span>
            @using (Html.BeginForm("CancelBooking", "CancelBooking", FormMethod.Post))
            {
                @Html.Hidden("checkInDate", user.CheckIn)
                @Html.Hidden("roomtype", user.RoomType)
                <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
            }
        </div>
    }
}
else
{
    <p>No bookings found.</p>
}
