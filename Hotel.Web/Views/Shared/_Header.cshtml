@using Hotel.Domain.Enums
@{
    ViewBag.Title = "_Header";
    var loginStatus = System.Web.HttpContext.Current.Session["LoginStatus"] as string;
}

<div class="container-fluid">
    <div class="row align-items-center">
        <div class="col-6 col-lg-4 site-logo" data-aos="fade"><a href="@Url.Action("Index","Home")">Celestial Oasis</a></div>
        <div class="col-6 col-lg-8">
            <div class="site-menu-toggle js-site-menu-toggle" data-aos="fade">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <!-- END menu-toggle -->
            <div class="site-navbar js-site-navbar">
                <nav role="navigation">
                    <div class="container">
                        <div class="row full-height align-items-center">
                            <div class="col-md-6 mx-auto">
                                <ul class="list-unstyled menu">
                                    <li class="active"><a href="@Url.Action("Index","Home")">Home</a></li>
                                    <li><a href="@Url.Action("Index","Room")">Rooms</a></li>
                                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                                    <li><a href="@Url.Action("Index","Reservation")">Reservation</a></li>
                                    @if (loginStatus != "login")
                                    {
                                        <li><a href="@Url.Action("Index","Login")">Log in</a></li>
                                    }
                                    @if (loginStatus == "login")
                                    {
                                        <li><a href="@Url.Action("Logout","Login")">Log out</a></li>
                                        <li><a href="@Url.Action("Index","CancelBooking")">Check bookings</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
