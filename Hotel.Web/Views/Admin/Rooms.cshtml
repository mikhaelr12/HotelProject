@using Hotel.Domain.Enums
@model IEnumerable<Hotel.Web.Models.Rooms>

@{
    ViewBag.Title = "Room Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    body {
        background-color: black;
        color: white;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div class="container-fluid">
    <div class="row align-items-center">
        <div class="col-6 col-lg-4 site-logo" data-aos="fade"><a href="">Admin Dashboard</a></div>
        <div class="col-6 col-lg-8">
            <div class="site-menu-toggle js-site-menu-toggle" data-aos="fade">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <!-- END menu-toggle -->
            <div class="site-navbar js-site-navbar">
                <nav role="navigation">
                    <div class="container">
                        <div class="row full-height align-items-center">
                            <div class="col-md-6 mx-auto">
                                <ul class="list-unstyled menu">
                                    <li><a href="@Url.Action("Index", "Admin")">Users</a></li>
                                    <li><a href="#">Bookings</a></li>
                                    <li><a href="@Url.Action("Logout","Login")">Log out</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RoomType</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var room in Model)
                {
                    <tr>
                        <td>@room.RoomId</td>
                        <td>@room.RoomType.ToString()</td>
                        <td>
                            <!-- Display current price -->
                            @room.Price
                        </td>
                        <td>
                            <!-- Form to edit the room price -->
                            <form action="@Url.Action("ChangeRoomPrice", "Admin")" method="post">
                                <!-- Hidden fields to store room ID and room type -->
                                @Html.Hidden("roomId", room.RoomId)
                                @Html.Hidden("roomType", room.RoomType)

                                <!-- Input field to enter new price -->
                                <input type="number" name="newPrice">

                                <!-- Submit button to update room price -->
                                <button type="submit" class="btn btn-primary">Update Price</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
